{
  "schemaVersion": 1,
  "id": "scrolls",
  "version": "${version}",
  "name": "scrolls",
  "description": "A mod adding a little bit of magic to minecraft in the form of scrolls!",
  "authors": ["Me!"],
  "contact": {
    "homepage": "",
    "sources": ""
  },
  "license": "CC0-1.0",
  "icon": "assets/scrolls/icon.png",
